<Window x:Name="MainWindow1" x:Class="movie_lists.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:movie_lists"
        mc:Ignorable="d"
        Title="Movie Search" Height="350" Width="525"
        Padding="10">
    <StackPanel x:Name="spMasterPanel">
        <Label x:Name="lbQuery" Margin="10 0" Content="Enter query:" />
        <TextBox x:Name="tbQuery" Padding="0 2" Margin="10 0" Text="{Binding InputValue, UpdateSourceTrigger=PropertyChanged}" />
        <Button x:Name="btnSearch" Content="Search" Width="60" HorizontalAlignment="Left" Margin="10 5 5 5" Click="ButtonClick"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" Margin="15 5">
            <UniformGrid Name="resultsGrid">
                
            </UniformGrid>
        </ScrollViewer>
    </StackPanel>
</Window>
